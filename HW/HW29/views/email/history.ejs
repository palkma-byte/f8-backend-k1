<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sent Email History</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container mt-5">
      <h2>Sent Email History</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Email gửi đến</th>
            <th>Tiêu đề</th>
            <th>Trạng thái</th>
            <th>Thời gian gửi</th>
            <th>Chi tiết</th>
          </tr>
        </thead>
        <tbody>
          <% emailHistory.forEach(record => { %>
          <tr>
            <td><%= record.clientEmail %></td>
            <td><%= record.title %></td>
            <td><%= record.status === 1 ? "Đã đọc" : "Chưa đọc" %></td>
            <td>
              <%= moment(record.createdAt).format('MMMM Do YYYY, h:mm:ss a')%>
            </td>
            <td>
              <a href="/detail?id=<%= record.id %>" class="btn btn-primary"
                >See detail</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <a href="/" class="btn btn-primary">Back to home</a>
    </div>
  </body>
</html>
